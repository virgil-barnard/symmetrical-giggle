import pandas as pd

def get_closing_costs(stock, start_date, end_date):
    # Read in historical stock data from a CSV file
    df = pd.read_csv('stock_data.csv', index_col='Date')
    
    # Filter the data to only include the specified stock and date range
    filtered_df = df[df['Stock'] == stock]
    filtered_df = filtered_df[start_date:end_date]
    
    # Calculate the closing costs for each day in the filtered data
    closing_costs = []
    for i in range(len(filtered_df)):
        if i > 0:
            closing_costs.append(filtered_df['Close'][i] - filtered_df['Close'][i-1])
        else:
            closing_costs.append(filtered_df['Close'][i])
    
    return closing_costs
